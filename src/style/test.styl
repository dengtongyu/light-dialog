@import './lightDialog.styl';

html {
	height: 100%;
	background-color: #e2e2e2;
}

body {
	background-color: #e2e2e2;
	font-family: Microsoft YaHei;
	min-height: 100%;
}

dl {
	padding:transformRem(100) 0 0;
	text-align: center;
	font-size: transformRem(30);
	&>dt {
		line-height: transformRem(30);
	}
	&>dd {
		margin-top: transformRem(30);
	}
}

button {
	font-family: Microsoft YaHei;
	width: transformRem(180);
	height: transformRem(60);
	border: none;
	background-color: #0fadf2;
	color: #fff;
	font-size: transformRem(30);
}
